{
	"name": "mern-testing-project",
	"version": "1.0.0",
	"description": "MERN Stack testing assignment",
	"main": "index.js",
	"scripts": {
	  "install-all": "pnpm install --dir client && pnpm install --dir server",
	  "start:client": "pnpm --dir client dev",
	  "start:server": "pnpm --dir server start",
	  "test": "jest",
	  "test:unit": "jest --testPathPattern=unit",
	  "test:integration": "jest --testPathPattern=integration",
	  "test:e2e": "cypress run",
	  "test:coverage": "jest --coverage",
	  "cypress:open": "cypress open"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
	  "@babel/core": "^7.28.0",
	  "@babel/preset-env": "^7.28.0",
	  "@babel/preset-react": "^7.27.1",
	  "babel-jest": "^30.0.4",
	  "cypress": "^13.11.0",
	  "jest": "^29.7.0",
	  "jest-environment-jsdom": "^30.0.4"
	}
  }